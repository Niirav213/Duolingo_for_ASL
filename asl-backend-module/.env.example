# ASL Learning Platform - Environment Configuration

# Application Settings
APP_NAME="ASL Learning Platform"
APP_VERSION="1.0.0"
DEBUG=True

# Database
DATABASE_URL=sqlite+aiosqlite:///./test.db
# For PostgreSQL: postgresql+asyncpg://user:password@localhost:5432/asl_db
DATABASE_ECHO=False

# Security
SECRET_KEY=your-secret-key-change-in-production-12345
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production-12345
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:80
CORS_CREDENTIALS=True

# ML Service
ML_SERVICE_URL=http://localhost:8001
ML_SERVICE_PREDICT_ENDPOINT=/predict

# Celery (Optional)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Email Settings (Optional)
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASSWORD=

# Docker Compose Settings
DB_USER=asluser
DB_PASSWORD=aslpass123
DB_NAME=asl_db
